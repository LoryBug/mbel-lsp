{
  "name": "mbel-lsp-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Language Server Protocol implementation for MBEL v5",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint packages/*/src/**/*.ts",
    "type-check": "tsc --noEmit",
    "btlt": "npm run build && npm run type-check && npm run lint && npm run test"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
