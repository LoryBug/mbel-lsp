{
  "name": "mbel-vscode",
  "displayName": "MBEL v5",
  "description": "Language support for MBEL v5 - Memory Bank Expression Language",
  "version": "0.1.0",
  "publisher": "mbel",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:mbel"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mbel",
        "aliases": [
          "MBEL",
          "mbel"
        ],
        "extensions": [
          ".mbel",
          ".mbel.md"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mbel",
        "scopeName": "source.mbel",
        "path": "./syntaxes/mbel.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:server",
    "build:extension": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "build:server": "esbuild ../mbel-lsp/src/bin.ts --bundle --outfile=server/bin.js --format=cjs --platform=node",
    "watch": "npm run build:extension -- --watch"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.0"
  }
}
